<section class="signup contheight">
	<div class="content">

		<h3>Tell us about yourself</h3>
		<form action="/signup" method="post" class="uk-form">
				<input autofocus name="firstName" placeholder="First Name" required type="text" value="{{input.firstName}}"/>
				<input name="lastName" placeholder="Last Name" required type="text" value="{{input.lastName}}"/>
			<div>
				<input name="username" placeholder="Username" required type="text" value="{{input.username}}"/>
				<input autocomplete="off" name="password" placeholder="Password" required type="password"/>
			</div>
			<div>
				<button class="uk-button uk-button-success" type="submit">Sign up as new user</button>
			</div>
			<span class="error-msg">{{error}}</span>
		</form>
	</div>

</section>
